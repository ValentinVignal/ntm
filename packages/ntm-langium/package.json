{
    "name": "ntm-langium",
    "displayName": "ntm-langium",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "ntm-langium",
            "aliases": ["NTM Langium", "ntm-langium"],
            "extensions": [".ntm"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "ntm-langium",
            "scopeName": "source.ntm-langium",
            "path": "./syntaxes/ntm-langium.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:ntm-langium"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "ntm-langium-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "chevrotain": "^9.1.0",
        "chalk": "^4.1.2",
        "commander": "^8.0.0",
        "langium": "^0.5.0",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2",
        "vscode-uri": "^3.0.2"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^5.28.0",
        "@typescript-eslint/parser": "^5.28.0",
        "eslint": "^8.17.0",
        "langium-cli": "^0.5.0",
        "typescript": "^4.7.4"
    }
}
